{
  "root": true,
  "extends": "next/core-web-vitals",
  "plugins": [""],
  "overrides": [
    {
      "files": ["*.ts"],
      "extends": ["eslint:recommended"],
      "rules": {
        "@typescript-eslint/no-unsafe-argument": "off",
        "@typescript-eslint/no-unsafe-member-access": "off"
      },
      "parserOptions": {
        "project": "tsconfig.json"
      }
    },
    {
      "files": ["*.js", "*.ts"],
      "rules": {
        "no-unused-vars": "off",
        "max-classes-per-file": "off"
      }
    }
  ]
}
